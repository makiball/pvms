<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="16dp"
        app:cardCornerRadius="5dp"
        android:elevation="1dp"
        app:cardElevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:padding = "10dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/total_txt"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                android:text="총 차량 수 : 0대"
                android:textColor="#038576"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/total_reg_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등        록  : 0대"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/total_txt"
                app:layout_constraintStart_toStartOf="@id/total_txt"/>

            <TextView
                android:id="@+id/total_reg_no_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="미  등  록  : 0대"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/total_reg_txt"
                app:layout_constraintStart_toStartOf="@id/total_reg_txt"/>

            <TextView
                android:id="@+id/lawstop_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="불법 주차 : 0대"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/total_reg_no_txt"
                app:layout_constraintStart_toStartOf="@id/total_reg_no_txt"/>

            <TextView
                android:id="@+id/date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="작  성  일  : 2023-09-07 10:10:10"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/lawstop_txt"
                app:layout_constraintStart_toStartOf="@id/lawstop_txt"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/kakaotalk"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:backgroundTint="#FFEB3B"
                android:text = "관제번호전송"
                android:textSize = "10sp"
                android:textColor = "#000000"
                app:iconTint="#000000"
                app:iconSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/total_txt"
                />

            <com.google.android.material.button.MaterialButton
                android:id = "@+id/delete"
                android:layout_width="53dp"
                android:layout_height="40dp"
                android:backgroundTint="#E91E63"
                android:layout_marginTop = "10dp"
                android:text = "삭제"
                android:textSize = "10sp"
                app:layout_constraintTop_toBottomOf="@id/kakaotalk"
                app:layout_constraintEnd_toEndOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarNumberRegActivity">

    <!-- 헤더 -->
    <com.google.android.material.button.MaterialButton
        android:id = "@+id/back_bt"
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="#E5E5E5"
        android:elevation="5dp"
        android:layout_marginTop = "8dp"
        android:layout_marginStart = "8dp"
        app:icon="@drawable/back_bt_arrow"
        app:iconSize="15dp"
        app:iconGravity="start"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cornerRadius="5dp"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "타이틀"
        android:textColor = "#000000"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/back_bt"
        app:layout_constraintBaseline_toBaselineOf="@id/back_bt"
        />
    <com.google.android.material.internal.BaselineLayout
        android:id = "@+id/linelayout"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/header_shape"
        android:elevation="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_bt"
        >

    </com.google.android.material.internal.BaselineLayout>

    <!-- 서브 타이틀 -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "파일 등록"
        android:layout_marginTop = "16dp"
        android:layout_marginLeft = "8dp"
        android:textColor = "#000000"
        android:textSize = "24sp"
        android:lineSpacingExtra="-1sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linelayout"
        />


</androidx.constraintlayout.widget.ConstraintLayout>